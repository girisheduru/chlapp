# MongoDB
# Local: use localhost (or leave default)
MONGODB_URL=mongodb://localhost:27017
# Railway: set MONGODB_URL in Railway Variables to your Atlas connection string, e.g.:
# mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority

DATABASE_NAME=chl_datastore_db

# LLM (OpenAI or compatible API)
# Get your API key from https://platform.openai.com/api-keys
LLM_API_KEY=
LLM_MODEL=gpt-4
# Optional: for custom API base (e.g. Azure OpenAI, other providers)
# LLM_API_BASE_URL=https://api.openai.com/v1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Tavily (optional — for reflection flow: web search for James Clear / Atomic Habits quotes)
# Get your API key from https://app.tavily.com/
# TAVILY_API_KEY=

# Application
APP_NAME=CHL App
APP_VERSION=1.0.0
DEBUG=false

# Firebase (optional — if missing, auth is skipped for local dev)
# FIREBASE_PROJECT_ID=your-project-id
# Option A: path to service account JSON file (local dev; keep file out of git via .gitignore)
# GOOGLE_APPLICATION_CREDENTIALS=firebase-service-account.json
# Option B: entire service account JSON as a single env var (production: Railway/Vercel secrets)
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...@....iam.gserviceaccount.com",...}
# Admin API: comma-separated Firebase UIDs allowed to call admin endpoints
# ADMIN_UIDS=uid1,uid2

# CORS (for production: add your Vercel frontend URL so the browser allows requests)
# CORS_ORIGINS=https://your-app.vercel.app
